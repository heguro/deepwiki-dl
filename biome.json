{
  "$schema": "https://biomejs.dev/schemas/2.2.7/schema.json",
  "files": {
    "includes": ["src/**/*.ts", "*.json"]
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true
    }
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 100
  },
  "javascript": {
    "formatter": {
      "enabled": true
    }
  }
}
